<h1 class="text-center mb-3">Iniciar sesión</h1>
<section class="row justify-content-center p-3">
	<div class="col-md-6">
		<form action="/login" method="POST" class="mb-2">
			<div class='mb-3'>
				<input id="name-product" class="form-control" type='email' name='username' placeholder="Email" />
			</div>
			<div class='mb-3'>
				<input id="price-product" class="form-control" type='password' name='password'
					placeholder="Contraseña" />
			</div>
			<div class='d-flex justify-content-center'>
				<input class="btn btn-success" type='submit' value='Iniciar sesión' />
			</div>
		</form>
		<form action="/redirect-signup" method="POST">
			<div class='d-flex justify-content-center'>
				<input class="btn btn-primary" type='submit' value='Registrate' />
			</div>
		</form>
	</div>
</section>